<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FF"
    tools:context=".view.Sorting_Transactions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <include
            android:layout_margin="5dp"
            android:id="@+id/back_button"
            layout="@layout/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/syt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="8dp"
            android:layout_centerHorizontal="true"
            android:text="@string/sort_your_transactions"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="14sp"
            android:textColor="#131313" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="25dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/syt"
            android:text="@string/_1_of_20"
            android:fontFamily="@font/inter_regular"
            android:textSize="12sp"
            android:textColor="#131313" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="343dp"
        android:layout_height="238dp"
        android:layout_centerHorizontal="true"
        android:translationY="112dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="197dp">
            
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_base"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                app:cardCornerRadius="24dp">

                <RelativeLayout
                    android:layout_width="314dp"
                    android:layout_height="145dp"
                    android:translationY="20dp"
                    android:translationX="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="61dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="10sp"
                            android:text="@string/transaction_details"
                            android:textColor="#5C616F"/>

                        <RelativeLayout
                            android:layout_width="314dp"
                            android:layout_height="37dp"
                            android:translationY="24dp">

                            <ImageView
                                android:id="@+id/bank_logo"
                                android:layout_width="37dp"
                                android:layout_height="37dp"
                                android:src="@drawable/kuda_bank"/>

                            <TextView
                                android:id="@+id/bank_name"
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:translationX="49dp"
                                android:translationY="2dp"
                                android:fontFamily="@font/inter_medium"
                                android:textSize="14sp"
                                android:hint="@string/kuda_bank"
                                android:textColorHint="#212325"
                                android:textColor="#212325"/>

                            <TextView
                                android:id="@+id/balance"
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:translationX="48dp"
                                android:layout_below="@+id/bank_name"
                                android:fontFamily="@font/inter_medium"
                                android:textSize="10sp"
                                android:hint="@string/_2175836514"
                                android:textColorHint="#363D4E"
                                android:textColor="#363D4E"/>

                            <TextView
                                android:id="@+id/transaction_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:translationY="2dp"
                                android:layout_alignParentEnd="true"
                                android:fontFamily="@font/inter_medium"
                                android:textSize="14sp"
                                android:hint="@string/_12_000_00_sar"
                                android:textColorHint="#FF0000"
                                android:textColor="#FF0000"/>

                            <TextView
                                android:id="@+id/transaction_date_time"
                                android:layout_width="wrap_content"
                                android:layout_height="17dp"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/transaction_amount"
                                android:fontFamily="@font/inter_medium"
                                android:textSize="10sp"
                                android:hint="@string/sep_01_at_2_24_pm"
                                android:textColorHint="#363D4E"
                                android:textColor="#363D4E"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="295dp"
                        android:layout_height="60dp"
                        android:translationY="85dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="10sp"
                            android:text="@string/transaction_remark"
                            android:textColor="#5C616F"/>
                        
                        <TextView
                            android:id="@+id/transaction_remark"
                            android:layout_width="295dp"
                            android:layout_height="40dp"
                            android:translationY="20dp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textSize="14sp"
                            android:hint="@string/mc_loc_pos_prch_2134555666_funds_amp_electronic_t_la_lang"
                            android:textColor="#212325"
                            android:textColorHint="#212325"/>
                        
                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/lower_base"
                android:layout_width="293.85dp"
                android:layout_height="185dp"
                android:translationY="12dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/lower_base"/>
            
            <ImageView
                android:id="@+id/upper_base"
                android:layout_width="326.62dp"
                android:layout_height="185dp"
                android:translationY="6dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/upper_base"/>
            
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="221dp"
            android:layout_centerHorizontal="true"
            android:text="@string/does_this_category_match_the_transaction"
            android:fontFamily="@font/inter_medium"
            android:textSize="12sp"
            android:textColor="#0E0646"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="311dp"
        android:layout_height="324dp"
        android:translationY="366dp"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="32dp"
            android:background="@drawable/card_bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:translationY="41dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="100dp"
                    android:backgroundTint="#FFEADD">
                    
                    <TextView
                        android:layout_width="26dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/telephone_icon"
                        android:textColorHint="#0E1B42"
                        android:textColor="#0E1B42"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_regular"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:translationY="101dp"
                    android:layout_centerHorizontal="true"
                    android:hint="@string/utilities"
                    android:textColorHint="#0E0646"
                    android:textColor="#0E0646"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="24sp"/>
                
                <androidx.cardview.widget.CardView
                    android:layout_width="73dp"
                    android:layout_height="34dp"
                    android:translationY="167dp"
                    android:translationX="73dp"
                    android:backgroundTint="#E5F9FE"
                    app:cardCornerRadius="14dp">

                    <TextView
                        android:id="@+id/utility_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/lawma"
                        android:textColorHint="#0093B9"
                        android:textColor="#0093B9"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_semi_bold"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="73dp"
                    android:layout_height="34dp"
                    android:translationY="167dp"
                    android:translationX="170.5dp"
                    android:backgroundTint="#E5F9FE"
                    app:cardCornerRadius="14dp">

                    <TextView
                        android:id="@+id/utility_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/power"
                        android:textColorHint="#0093B9"
                        android:textColor="#0093B9"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_semi_bold"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="67dp"
                    android:layout_height="34dp"
                    android:translationY="225dp"
                    android:translationX="76dp"
                    android:backgroundTint="#E5F9FE"
                    app:cardCornerRadius="14dp">

                    <TextView
                        android:id="@+id/utility_type3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/water"
                        android:textColorHint="#0093B9"
                        android:textColor="#0093B9"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_semi_bold"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="67dp"
                    android:layout_height="34dp"
                    android:translationY="225dp"
                    android:translationX="175dp"
                    android:backgroundTint="#E5F9FE"
                    app:cardCornerRadius="14dp">

                    <TextView
                        android:id="@+id/utility_type4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="@string/rent"
                        android:textColorHint="#0093B9"
                        android:textColor="#0093B9"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_semi_bold"/>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        
        <ImageView
            android:layout_width="263dp"
            android:layout_height="305dp"
            android:layout_gravity="center_horizontal"
            android:translationY="18dp"
            android:src="@drawable/lower_bg"/>

        <ImageView
            android:layout_width="295dp"
            android:layout_height="308dp"
            android:layout_gravity="center_horizontal"
            android:translationY="4dp"
            android:src="@drawable/upper_bg"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:translationY="706dp"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="#F5F7FF"
            android:src="@drawable/syt_x"
            android:contentDescription="@string/cancel" />

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="#F5F7FF"
            android:src="@drawable/syt_love"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/love" />

    </RelativeLayout>

</RelativeLayout>