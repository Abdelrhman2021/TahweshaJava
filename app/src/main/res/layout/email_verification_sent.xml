<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FF"
    tools:context=".view.Email_verification_Sent">

    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="418dp"
        android:translationY="115dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="248dp"
            android:layout_height="256dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/email"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:translationY="300dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center"
                android:text="We have sent an email verification link to your email"
                android:textSize="24sp"
                android:fontFamily="@font/inter_semi_bold"
                android:textColor="#240F51" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="44dp"
                android:translationY="74dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Check your email test@test.com and click the link to verify your email address"
                android:textSize="14sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#292B2D" />

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:layout_width="335dp"
        android:layout_height="62dp"
        android:translationY="650dp"
        android:background="@drawable/rounded_box"
        android:layout_centerHorizontal="true"
        app:backgroundTint="#006C32"
        android:gravity="center"
        android:text="Open Email"
        android:textSize="14sp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="#FCFCFC"/>

</RelativeLayout>