<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FF"
    tools:context=".view.Forgot_Password">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <include
            android:layout_margin="5dp"
            android:id="@+id/back_button"
            layout="@layout/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:textColor="#131313"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="390dp"
        android:layout_centerHorizontal="true"
        android:translationY="120dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:text="Enter your email and weâ€™ll send you a link to reset your password."
            android:fontFamily="@font/inter_bold"
            android:textSize="24sp"
            android:textColor="#240F51"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:translationY="125dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:gravity="center"
                android:hint="Email"
                app:boxStrokeWidth="0dp"
                android:background="@drawable/rounded_box"
                app:hintTextColor="#8F94A3"
                app:placeholderTextColor="#040C22">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="290dp"
                    android:layout_height="55dp"
                    android:background="@color/white"
                    android:inputType="textEmailAddress"
                    android:textColor="#040C22"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:layout_width="335dp"
        android:layout_height="62dp"
        android:translationY="650dp"
        android:background="@drawable/rounded_box"
        android:layout_centerHorizontal="true"
        app:backgroundTint="#006C32"
        android:gravity="center"
        android:text="Continue"
        android:textSize="14sp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="#FCFCFC"/>

</RelativeLayout>