<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="335dp"
    android:layout_height="96dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_10">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="15dp"
            android:layout_centerVertical="true">

            <include
                android:id="@+id/blue_noti_icon"
                layout="@layout/blue_noti_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="3dp"/>

            <ImageView
                android:layout_gravity="top|end"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:elevation="10dp"
                android:src="@drawable/noti_ellipse_stroke"
                android:contentDescription="@string/ellipse_icon"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="235dp"
            android:layout_height="64dp"
            android:translationX="76dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:textSize="14sp"
                android:hint="@string/cashback_50"
                android:textColorHint="#131313"
                android:textColor="#131313"/>

            <TextView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationY="21dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="12sp"
                android:hint="@string/get_50_cashback_for_pizza_hut"
                android:textColorHint="#80131313"
                android:textColor="#80131313"/>

            <RelativeLayout
                android:layout_width="102dp"
                android:layout_height="20dp"
                android:translationY="44dp">

                <TextView
                    android:id="@+id/transaction_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14sp"
                    android:hint="@string/claim_it_now"
                    android:textColorHint="#2C14DD"
                    android:textColor="#2C14DD"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/fwd_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true" />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>