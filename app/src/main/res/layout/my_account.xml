<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FF"
    tools:context=".view.MyAccount">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <include
            android:layout_margin="5dp"
            android:id="@+id/back_button"
            layout="@layout/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_account"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:textColor="#131313"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="631dp"
        android:layout_centerHorizontal="true"
        android:translationY="120dp">

        <ImageView
            android:id="@+id/bank_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/kuda_bank"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="64dp"
            android:layout_centerHorizontal="true"
            android:hint="@string/kuda_bank"
            android:textColorHint="#111827"
            android:fontFamily="@font/inter_semi_bold"
            android:textSize="16sp"
            android:textColor="#161719"/>

        <androidx.cardview.widget.CardView
            android:layout_width="335dp"
            android:layout_height="192dp"
            android:translationY="123dp"
            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="24dp"
                    android:translationY="24dp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/type_of_account"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"
                        android:textColor="#6C727F"/>

                    <TextView
                        android:id="@+id/type_of_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/savings"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"
                        android:textColorHint="#121826"
                        android:textColor="#121826"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="24dp"
                    android:translationY="64dp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_no"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"
                        android:textColor="#6C727F"/>

                    <TextView
                        android:id="@+id/account_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/_1234567890"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"
                        android:textColorHint="#121826"
                        android:textColor="#121826"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="24dp"
                    android:translationY="104dp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/available_balance"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"
                        android:textColor="#6C727F"/>

                    <TextView
                        android:id="@+id/available_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/_12_000_00_sar"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/inter_semi_bold"
                        android:textSize="14sp"
                        android:textColorHint="#1B7A00"
                        android:textColor="#1B7A00"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="24dp"
                    android:translationY="144dp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_added"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"
                        android:textColor="#6C727F"/>

                    <TextView
                        android:id="@+id/date_time_added"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/_15_05_20_10_03_am"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"
                        android:textColorHint="#121826"
                        android:textColor="#121826"/>

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="335dp"
            android:layout_height="292dp"
            android:translationY="339dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="303dp"
                    android:layout_height="20dp"
                    android:translationY="16dp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recent_transactions"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/inter_semi_bold"
                        android:textSize="12sp"
                        android:textColor="#131313"/>

                    <include
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        layout="@layout/small_forward_button_black"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="303dp"
                    android:layout_height="216dp"
                    android:translationY="52dp"
                    android:layout_centerHorizontal="true"
                    tools:listitem="@layout/transactions_item"
                    tools:itemCount="4" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>