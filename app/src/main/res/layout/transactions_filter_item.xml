<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="335dp"
    android:layout_height="57dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginStart="2dp"
        android:id="@+id/bank_logo"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_centerVertical="true"
        android:src="@drawable/kuda_bank"/>

    <TextView
        android:id="@+id/bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="45dp"
        android:layout_centerVertical="true"
        android:fontFamily="@font/inter_medium"
        android:textSize="14sp"
        android:hint="@string/kuda_bank"
        android:textColorHint="#3E4968"
        android:textColor="#3E4968"/>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/transaction_amount"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:track="@drawable/switch_track_bg"
        android:thumb="@drawable/switch_thumb_bg"
        android:checked="true"/>

</RelativeLayout>