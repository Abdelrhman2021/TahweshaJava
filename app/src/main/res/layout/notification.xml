<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FF"
    tools:context=".view.Notification">

    <RelativeLayout
        android:id="@+id/nav_field"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp">

        <include
            android:id="@+id/back_button"
            layout="@layout/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transactions"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp"
            android:textColor="#131313"
            android:layout_centerInParent="true" />

        <include
            android:id="@+id/settings_icon"
            layout="@layout/settings_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nav_field"
        android:background="@drawable/transactions_bg"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="335dp"
                android:layout_height="match_parent"
                android:translationY="32dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="117dp"
                    android:layout_centerHorizontal="true"
                    tools:listitem="@layout/transactions_item"
                    tools:itemCount="4" />

                <TextView
                    android:translationY="335dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yesterday"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:translationY="377dp"
                    android:layout_centerHorizontal="true"
                    tools:listitem="@layout/transactions_item"
                    tools:itemCount="4" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="116dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/overlay"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>