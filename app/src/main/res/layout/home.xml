<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.Home">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:translationY="12dp"
            tools:ignore="RelativeOverlap">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/hello"
                android:textColor="#240F51"
                android:textSize="16sp"
                android:fontFamily="@font/inter_regular"/>
            <TextView
                android:translationX="43dp"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/john"
                android:textColor="#240F51"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:translationY="20dp"
                android:text="@string/your_finances_are_looking_good"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="#CC240F51"/>

        </RelativeLayout>

        <ImageView
            android:layout_alignStart="@+id/search"
            android:translationX="-50dp"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:translationY="13dp"
            android:src="@drawable/bell"
            android:contentDescription="@string/bell_icon" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:translationY="13dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/search"
            android:contentDescription="@string/search_icon" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="80dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="335dp"
                    android:layout_height="335dp"
                    app:cardCornerRadius="24dp"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#006C32">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/group_20402">

                        <RelativeLayout
                            android:layout_width="192dp"
                            android:layout_height="170dp"
                            android:translationY="24dp"
                            android:layout_centerHorizontal="true">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/ellipse_813">

                                <ImageView
                                    android:id="@+id/user_photo"
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:src="@drawable/male"
                                    android:contentDescription="@string/user_icon" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="192dp"
                                android:layout_height="104dp"
                                android:translationY="66dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/your_available_balance_is"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/inter_medium"
                                    android:textSize="11sp"
                                    android:textColor="#FAFCFF"/>

                                <TextView
                                    android:id="@+id/available_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:translationY="20dp"
                                    android:hint="@string/_20_983_sar"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="28sp"
                                    android:textColor="#FFFFFF"
                                    android:textColorHint="#FFFFFF"
                                    android:fontFamily="@font/inter_extra_bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:translationY="68dp"
                                    android:gravity="center"
                                    android:text="@string/by_this_time_last_month_you_spent_slightly_higher_22_719_sar"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/inter_medium"
                                    android:textSize="11sp"
                                    android:textColor="#FAFCFF"/>

                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="310dp"
                            android:layout_height="77dp"
                            android:translationY="230dp"
                            android:layout_centerHorizontal="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="15dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:hint="@string/saudi_nb"
                                    android:textColorHint="#E5F0FF"
                                    android:textColor="#E5F0FF"
                                    android:fontFamily="@font/inter_medium"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:hint="@string/_12_000_00sar"
                                    android:textColorHint="#FFFFFF"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="@font/inter_medium"
                                    android:textSize="12sp"
                                    tools:ignore="RelativeOverlap" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:translationY="31dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:hint="@string/al_rajhi_bank"
                                    android:textColorHint="#E5F0FF"
                                    android:textColor="#E5F0FF"
                                    android:fontFamily="@font/inter_medium"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:hint="@string/_950_00_sar"
                                    android:textColorHint="#FFFFFF"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="@font/inter_medium"
                                    android:textSize="12sp"
                                    tools:ignore="RelativeOverlap" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:translationY="62dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:hint="@string/saudi_british_bank"
                                    android:textColorHint="#E5F0FF"
                                    android:textColor="#E5F0FF"
                                    android:fontFamily="@font/inter_medium"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:hint="@string/_1_050_00_sar"
                                    android:textColorHint="#FFFFFF"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="@font/inter_medium"
                                    android:textSize="12sp"
                                    tools:ignore="RelativeOverlap" />

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="315dp"
                android:translationY="20dp">

                <include
                    android:id="@+id/forward_button"
                    layout="@layout/forward_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationY="351dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="335dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="24dp"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#006C32">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:translationX="80dp"
                            android:translationY="16dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:hint="@string/sort_your_transactions"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="34dp"
                            android:translationX="80dp"
                            android:translationY="40dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF"
                            android:hint="@string/get_points_for_sorting_your_ntransactions"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="315dp"
                android:translationY="375dp">

                <include
                    android:id="@+id/forward_buttonn"
                    layout="@layout/forward_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"/>

            </RelativeLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="45dp"
                android:translationY="373dp">

                <include
                    android:id="@+id/noti_icon"
                    layout="@layout/noti_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"/>

                <ImageView
                    android:layout_gravity="end"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/noti_ellipse"
                    android:contentDescription="@string/ellipse_icon" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="238dp"
                android:translationY="460dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:translationX="20dp"
                    android:translationY="8dp"
                    android:text="@string/my_budgets"
                    android:fontFamily="@font/inter_semi_bold"
                    android:textSize="13sp"
                    android:textColor="#240F51"
                    android:gravity="center"/>

                <RelativeLayout
                    android:layout_width="335dp"
                    android:layout_height="194dp"
                    android:translationY="44dp"
                    android:layout_centerHorizontal="true">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="24dp"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="#006C32">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="303dp"
                                android:layout_height="24dp"
                                android:translationY="16dp"
                                android:translationX="16dp">

                                <TextView
                                    android:layout_centerVertical="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/you_have"
                                    android:fontFamily="@font/inter_medium"
                                    android:textSize="12sp"
                                    android:textColor="#FFFFFF"
                                    android:gravity="center"
                                    tools:ignore="RelativeOverlap" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true">

                                    <include
                                        android:id="@+id/small_forward_buttonn"
                                        layout="@layout/small_forward_button"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_margin="1dp"/>

                                </RelativeLayout>

                            </RelativeLayout>

                            <TextView
                                android:layout_width="303dp"
                                android:layout_height="38dp"
                                android:layout_centerHorizontal="true"
                                android:hint="@string/_29_880_sar"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/inter_extra_bold"
                                android:textColor="#FFFFFF"
                                android:textColorHint="#FFFFFF"
                                android:translationY="40dp"/>

                            <TextView
                                android:layout_width="303dp"
                                android:layout_height="24dp"
                                android:translationY="78dp"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/inter_medium"
                                android:textSize="12sp"
                                android:hint="@string/left_out_of_n80_888_budgeted"
                                android:textColorHint="#240F51"
                                android:textColor="#240F51"/>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/myProgressBar"
                                android:layout_width="303dp"
                                android:layout_height="4dp"
                                android:translationY="127dp"
                                android:layout_centerHorizontal="true"
                                android:max="100"
                                app:indicatorColor="#32FC65"
                                android:progress="50"
                                app:trackCornerRadius="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:translationX="16dp"
                                android:translationY="154dp"
                                android:textSize="18sp"
                                android:hint="@string/amazed_emoji"
                                android:textColorHint="#FFFFFF"
                                android:textColor="#FFFFFF"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="277dp"
                                android:layout_height="18dp"
                                android:translationX="42dp"
                                android:translationY="160dp"
                                android:textSize="11sp"
                                android:fontFamily="@font/inter_medium"
                                android:hint="@string/sapa_go_soon_catch_you_bros_calm_down"
                                android:textColorHint="#240F51"
                                android:textColor="#240F51" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="323dp"
                android:layout_height="20dp"
                android:translationX="20dp"
                android:translationY="720dp"
                android:textSize="13sp"
                android:fontFamily="@font/inter_semi_bold"
                android:text="@string/our_partners"
                android:textColor="#0D1028"/>

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_navigation"
        android:background="@drawable/tapbar_bg"
        app:itemIconTint="@drawable/home_selector"
        app:itemHorizontalTranslationEnabled="false"
        app:labelVisibilityMode="unlabeled" />

</RelativeLayout>